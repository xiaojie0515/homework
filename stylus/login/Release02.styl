*
  padding 0px
  margin 0px

body
  background #EFEFF4

.heads
  height 65px
  padding 0px 15px
  background #fff
  border-bottom 1px solid #DEDEE3
  overflow hidden
  .quxiao
    float left
    font-size 16px
    line-height 70px
    font-family "Microsoft YaHei"
  .heads-txt
    width 60px
    height 60px
    margin 0 auto
    font-size 22px
    font-family "Microsoft YaHei"
    line-height 70px
    text-align center
.search-bg
  overflow hidden
  padding 15px 15px
  position relative
  .search-box
    position relative
    width 72%
    float left

    &:after
      content ''
      position absolute
      left 5px
      top 0px
      width 40px
      height 40px
      background url("../../../public/img/room-img/search.png")no-repeat center
      background-size 50%
    .search
      width 100%
      padding-left 50px
      height 40px
      border-radius 6px
      border 1px solid #E1E1E6
      color black
      font-family "Microsoft YaHei"
    .after
      content ''
      position absolute
      right  4px
      top 0px
      width 40px
      height 40px
      background url("../../../public/img/room-img/searchx.png")no-repeat center
      background-size 50%
  &:after
    content ''
    position absolute
    right  20%
    top 15px
    width 40px
    height 40px
    background url("../../../public/img/room-img/xinzeng.png")no-repeat center
    background-size 50%
  .search-txt
    line-height 40px
    float right
    font-size 16px
    color black
    font-family "Microsoft YaHei"

.room-bg
  padding 15px 10px
  background #fff
  .room-head
    font-size 1em
    font-family "Microsoft YaHei"
    text-indent 1em
    position relative
    margin-bottom 10px
    color #818181
    .dian
      content ''
      position absolute
      left 4px
      top 4px
      width 6px
      height 6px
      border-radius 50%
      background #BDE845
      background-size 100%
    .dian2
      content ''
      position absolute
      left 4px
      top 4px
      width 6px
      height 6px
      border-radius 50%
      background #45C9E5
      background-size 100%
  .room-box
    padding 0px 0px 0px 26px
    display flex
    margin-top 10px
    .room-type
      font-size 14px
      font-family "Microsoft YaHei"
      color #818181
    .room-type2
      margin-left  -26px

    .room-txt
      float left
      flex 1
      font-size 14px
      font-family "Microsoft YaHei"
      border-bottom 1px solid #E6E7EA
      margin-left 5px
      text-indent 0.5em
      color #282828
.room-bg2
  padding-right  0px
  padding-left 10px
  background #fff
  .room-box2
    padding 0px 0px 0px 26px
    margin-top 10px
    .room-type
      font-size 14px
      font-family "Microsoft YaHei"
      color #818181
    .radio_block
      display inline-block
      height 24px
      line-height 24px
      font-family "Microsoft YaHei"
      font-size 14px
      color #656565

      .radio_btn
        display inline-block
        width 8px
        height 8px
        margin 4px
        border 1px solid #E74000
        border-radius 50%
        vertical-align bottom
      &.selected
        .icon
          display inline-block
          width 4px
          height 4px
          margin 1px
          border 1px solid transparent
          border-radius 50%
          background-color #E74000
    .border
      border-bottom 1px solid #E6E7EA
.fabu-bg
  margin-top 20px
  width 90%
  margin-left 5%
  .fabu
    width 100%
    height 50px
    border-radius 8px
    text-align center
    line-height 50px
    background #EA5404
    font-family "Microsoft YaHei"
    color: #fff
